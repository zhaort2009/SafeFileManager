<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#9CAFB7"
                android:centerY="0.5"
                android:endColor="#9CAFB7"
                android:startColor="#9CAFB7" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:endColor="#007EA7"
                    android:startColor="#007EA7" />
            </shape>
        </clip>
    </item>
</layer-list>